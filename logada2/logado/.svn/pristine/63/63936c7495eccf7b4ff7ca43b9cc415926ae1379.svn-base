<script src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>


<script type="text/javascript">
var map;

function initialize() {
	var myLatlng;
	var lat = <?php echo $escola->getLatitude(); ?>;
	var lng = <?php echo $escola->getLongitude(); ?>;
	if (lat == 0 && lng == 0) {
		lat = -22.89645;
		lng = -43.18434;
	} 
	myLatlng = new google.maps.LatLng(lat, lng);
	
	var mapOptions = {
		zoom: 15,
		center: myLatlng
	}
	map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
	
	// Place markers on map
	var marker = new google.maps.Marker({
		position: myLatlng,
		map: map,
		title: 'Arraste este marcador para a nova localização',
		draggable: true,
		animation: google.maps.Animation.DROP,
		icon: 'http://maps.google.com/mapfiles/ms/icons/yellow-dot.png'
	});
	google.maps.event.addListener(marker, 'dragend', function(event) 
	{
		document.getElementById("latitude").value = event.latLng.lat();
		document.getElementById("longitude").value = event.latLng.lng();
		//$.ajax({url: "Localizacao/acesso/?lat="+arg1+"&lng="+arg2}).done(function(data) {
		//	console.log(data);
		//});
		//alert(ok);
	});
}

google.maps.event.addDomListener(window, 'load', initialize);
</script>
<!-- End Google Maps Script -->

